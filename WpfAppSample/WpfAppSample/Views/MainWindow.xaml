<Window x:Class="WpfAppSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppSample"
        xmlns:vm="clr-namespace:WpfAppSample.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="top" Height="20">
                <MenuItem Header="File"></MenuItem>
                <MenuItem Header="Help"></MenuItem>
            </Menu>
            <StackPanel DockPanel.Dock="Left" Width="100">
                <Button Content ="{Binding naviButton1Content}" Margin="5" Command="{Binding navigation}" CommandParameter="Page1"></Button>
                <Button Content ="{Binding naviButton2Content}" Margin="5" Command="{Binding navigation}" CommandParameter="Page2"></Button>
            </StackPanel>
            <StackPanel DockPanel.Dock="Right">
                <Frame Name="frame" NavigationUIVisibility="Hidden"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
